<%== erb :header %>

<div class="container">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h1>Search Results...</h1>
    </div>
    <div class="panel-body">
      <% if @tweets.any? %>
          <table class="table table-striped table-bordered">
            <tr>
              <th>Tweet</th>
              <th>Retweets</th>
              <th>Favourites</th>
            </tr>
            <% @tweets.each do |tweet| %>
                <tr>
                  <td>
                    <div class="media">
                      <a href="<%= tweet.user.uri %>" class="pull-left">
                        <img src="<%=tweet.user.profile_image_uri %>" class="img-thumbnail" alt="Profile pic">
                      </a>
                      <div class="media-body">
                        <h4 class="media-heading">
                          <a href="<%= tweet.user.uri %>">
                            <%=tweet.user.screen_name %>
                          </a>
                          <a href="<%= tweet.uri %>">
                            <small><i><%=tweet.created_at.strftime("Tweeted at %R on %d/%m/%Y") %></i></small>
                          </a>
                        </h4>
                        <p><%=tweet.full_text %></p>
                      </div>
                    </div>
                  </td>
                  <td>
                    <%=tweet.retweet_count %>
                  </td>
                  <td>
                    <%=tweet.favorite_count %>
                  </td>
                </tr>
            <% end %>
          </table>
      <% else %>
          <p class="text-danger">No results found!</p>
      <% end %>
    </div>
  </div>
</div>

<%== erb :footer %>